extends layout
block navigation
    include ./partials/_mainHeader.pug

block content
  div.recipes-page
    h2 Top Recipes
    if recipes
    each recipe in recipes
      section.recipe-card
        h3.recipe-title #{recipe.title}
        h3.recipe-author
          | Recipe Author:
          span #{recipe.author}
        h4.recipe-votes
          | Number of Upvotes:
          span #{recipe.votes}
        h4.recipe-orientation
          | Orientation:
          span #{recipe.orientation}
        h4.recipe-water-temp
          | Water Temperature:
          span #{recipe.waterTemp}
          | &#8451
        h4.recipe-water-mass
          | Water Mass:
          span #{recipe.massWater}
          | g
        h4.recipe-coffee-mass
          | Coffee Mass:
          span #{recipe.massCoffee}
          | g
        h4.recipe-grind-size
          | Grind Size:
          span #{recipe.grind}
        details.recipe-instructions
          summary Instructions
          p #{recipe.instructions}
        form.upvote(action='/allrecipes', method='post')
          input(type='hidden', value= recipe.id name='recipeID')
          button(type='submit', name='button') üëç Upvote
