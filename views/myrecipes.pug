extends layout

block content
  include ./partials/_mainHeader.pug
  div.your-recipes-page
    h2 My Recipes
    if recipes
    each recipe in recipes
      section.recipe-card
        h3.recipe-title #{recipe.title}
        h3.recipe-author
          | Recipe Author:
          span #{recipe.author}
        h4.recipe-votes
          | Number of Upvotes:
          span #{recipe.votes}
        h4.recipe-orientation
          | Orientation:
          span #{recipe.orientation}
        h4.recipe-water-temp
          | Water Temperature:
          span #{recipe.waterTemp}
          | &#8451
        h4.recipe-water-mass
          | Water Mass:
          span #{recipe.massWater}
          | g
        h4.recipe-coffee-mass
          | Coffee Mass:
          span #{recipe.massCoffee}
          | g
        h4.recipe-grind-size
          | Grind Size:
          span #{recipe.grind}
        details.recipe-instructions
          summary Instructions
          p #{recipe.instructions}
        a(href=`/editrecipes/${recipe.id}`) Edit Recipe
